<% let index=0; %>

	<% if(theme.about.title) { %>
		<div class="row trm-scroll-animation" style="margin-bottom: var(--card-bottom-card);">
			<div class="col-lg-12">
				<blockquote>
					<%- theme.about.title %>
				</blockquote>
			</div>
		</div>
		<% } %>

			<% if(theme.about.introduction) { %>
				<div class="row trm-scroll-animation">
					<div class="col-lg-12">
						<h5 class="trm-title-with-divider">
							<%- __('title.author') %>
								<span data-number="0<%- ++index %>"></span>
						</h5>
						<div class="trm-card trm-contrast trm-active-el">
							<%- theme.about.introduction %>
						</div>
					</div>
				</div>
				<% } %>

					<% if(theme.about.experience) { %>
						<div class="row trm-scroll-animation">
							<div class="col-lg-12">
								<h5 class="trm-title-with-divider">
									<%- __('Work experience') %>
										<span data-number="0<%- ++index %>"></span>
								</h5>
								<div class="trm-card trm-active-el">
									<ul>
										<% theme.about.experience.forEach(function(item) { %>
											<li>
												<strong><%- item.company %> — <%- item.role %></strong><br />
												<span><%- item.date %></span><br />
												<p><%- item.highlights %></p>
											</li>
											<% }) %>
									</ul>
								</div>
							</div>
						</div>
						<% } %>

							<% if(theme.about.projects) { %>
								<div class="row trm-scroll-animation">
									<div class="col-lg-12">
										<h5 class="trm-title-with-divider">
											<%- __('Projects') %>
												<span data-number="0<%- ++index %>"></span>
										</h5>
										<div class="trm-card trm-active-el">
											<ul>
												<% theme.about.projects.forEach(function(item) { %>
													<li>
														<strong><%- item.title %> — <%- item.role %></strong><br />
														<span><%- item.date %></span><br />
														<p><%- item.highlights %></p>
													</li>
													<% }) %>
											</ul>
										</div>
									</div>
								</div>
								<% } %>

									<% if(theme.about.skills) { %>
										<div class="row trm-scroll-animation">
											<div class="col-lg-12">
												<h5 class="trm-title-with-divider">
													<%- __('Skills') %>
														<span data-number="0<%- ++index %>"></span>
												</h5>
												<div class="trm-card trm-active-el">
													<%- theme.about.skills %>
												</div>
											</div>
										</div>
										<% } %>

											<% if(theme.about.privacy) { %>
												<div class="row trm-scroll-animation">
													<div class="col-lg-12">
														<h5 class="trm-title-with-divider">
															<%- __('title.privacy') %>
																<span data-number="0<%- ++index %>"></span>
														</h5>
														<div class="trm-card trm-active-el">
															<%- theme.about.privacy %>
														</div>
													</div>
												</div>
												<% } %>